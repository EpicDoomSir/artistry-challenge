<h1>Add Instrument To Artist</h1>

<%= form_for @artist_plays, :url => { :action => "add_instrument" } do |f| %>

    <%= f.label :artist %>
    <%= f.collection_select :artist_id, Artist.all, :id, :name %><br>

    <%= f.label :instrument %>
    <%= f.collection_select :instrument_id, Instrument.all, :id, :name %><br>

    <%= submit_tag 'Add Instrument' %>
<% end %>